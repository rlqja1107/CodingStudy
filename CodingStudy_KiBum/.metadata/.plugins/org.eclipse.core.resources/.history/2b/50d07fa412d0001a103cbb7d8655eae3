package BFS_DFS;

import java.util.ArrayList;

public class ChangeWords {
	static int answer=0;
	static String target_word;
	static int answer_final;
	public static void count(String begin,String []words) {
		int count;
		answer++;
		if(words.length==0) {
			answer_final=0;
		}
		ArrayList<String> wordArray=new ArrayList<String>();
		for(String word: words) {
			wordArray.add(word);
			count=0;
			for(int i=0;i<begin.length();i++) {
				if(word.charAt(i)==begin.charAt(i))continue;
				count++;
				if(count>=2) {
					wordArray.remove(word);
				}		
			}
		}
		if(wordArray.contains(target_word)) {
			answer_final=answer;
			return;
		}
		wordArray.remove(begin);
		for(String i:wordArray) {
			
			count(i,words);
		}
		
	}
	public static int solution(String begin,String target,String[] words) {
		target_word=target;
		count(begin,words);
		return answer_final;
	}

	public static void main(String[] args) {	
		String a[]= {"hot","dot","dog","lot","log","cog"};
		System.out.println(solution("hit","cog",a));
	}

}
